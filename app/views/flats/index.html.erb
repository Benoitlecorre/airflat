
<div class="row">
  <div class="col-md-4">
    <div id="map-box">
      <iframe width='100%' height='100%' frameBorder='0' src='http://a.tiles.mapbox.com/v3/skycitilab.i9pk92oo/attribution,zoompan,zoomwheel,geocoder,share.html'></iframe>
    </div>
  </div>

  <div class="spacer">
  </div>

  <div class="col-md-8">
    <div id="annonces-box">
      <% @flats.each do |flat| %>

      <div class="col-md-6">
        <div class="box">
          <div class="row">

            <div class="col-md-12">
              <%= image_tag flat.photos.first.file.url(:medium) if flat.photos.size > 0 %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="below-box">
                <div class="row">

                  <div class="col-md-8">
                    <%= link_to flat_path(flat) do %>
                    <h3><%= flat.title %></h3>
                    <% end %>
                    <address><%= flat.address %></address>
                  </div>

                  <div class="col-md-4">
                    <div class="price">
                      <%= flat.dayprice %>â‚¬
                      <p>par jour</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

        </div><!-- end div box-->
      </div><!-- end div col-md-6-->
      <% end %>
    </div><!-- end div annonces-box -->
  </div><!-- end col-md-8-->
</div>